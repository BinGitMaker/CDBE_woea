  <section class="container mt-4">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for feedback in feedbacks %}

                {% if loop.first %}{% set active = 'active' %}{% else %}{% set active = '' %}{% endif %}
                    <div data-slide-to="{{ loop.index0 }}"></div>

                <div class="carousel-item {{ active }}">

                    <div class="w-100 d-block">
                        <h3 class="">{{ feedback.title }}</h3>
                        <p class="m-0">{{ feedback.content|slice(0, 100) }} (...)</p>
                        <h2 class="d-flex justify-content-end feedback-name">{{ feedback.name }}</h2>
                    </div>
                        
                </div>
            {% endfor %}  

        </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
