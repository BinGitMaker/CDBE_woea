{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des produits : Admin Cabinet de Bien-Être-Sandrine-Picod{% endblock %}

{% block body %}
<h1 class="d-flex justify-content-center text-bg-info">Gestion des massages</h1>

<div class="row d-flex justify-content-start "> 
    <button type="button" class="btn btn-success col-2 m-3">
        <a class="text-decoration-none text-light" href="{{ path('admin_product_new') }}">
            CREER UN PRODUIT
        </a>
    </button>

    <button type="button" class="btn btn-info col-2 m-3">
        <a class="text-decoration-none text-primary" href="{{ path('admin_prod_category_index') }}">
            CATÉGORIES
        </a>
    </button> 

    <table class="table">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Slug</th>
                <th>Illustration</th>
                <th>Subtitle</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                
                <td>{{ product.name }}</td>
                <td>{{ product.slug }}</td>
                <td><img class="bd-placeholder-img bd-placeholder-img-lg img-fluid " 
                    src="{{ asset('/uploads/images/' ~ product.illustration) }}" 
                    
                    alt="{{ product.illustration }}"></td>
                <td>{{ product.subtitle }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>
                   
                    <div class="d-flex flex-column">
                        <button type="button" class="btn btn-primary mb-2">
                            <a class="text-decoration-none text-light" href="{{ path('admin_product_edit', {'id': product.id}) }}">
                                MODIFIER 
                            </a>
                        </button>
                        {{ include('admin/product/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">il n'y a pas de massage pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
