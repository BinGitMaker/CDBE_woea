{{ form_start(form) }}
            
    <div class="headerBlog d-flex justify-content-center">
        <div class="col-6 w-25 mx-3">
            {{ form_row(form.illustration) }}
        </div>
        <div class="col-6">
            {{ form_row(form.undertitle) }}
        </div>
    </div>

    <div class="contentBlog d-flex mt-4">
        <div class="col-4">
            {{ form_row(form.title1) }}
            {{ form_row(form.description1) }}
            {{ form_row(form.pics1) }}
        </div>

        <div class="home-divider border m-2"></div>
                    
        <div class="col-4">
            {{ form_row(form.title2) }}
            {{ form_row(form.description2) }}
            {{ form_row(form.pics2) }}
        </div>

        <div class="home-divider border m-2"></div>
                    
        <div class="col-4">
            {{ form_row(form.title3) }}
            {{ form_row(form.description3) }}
            {{ form_row(form.pics3) }}
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
