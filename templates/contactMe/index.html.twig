{% extends 'base.html.twig' %}

{% block title %}Contactez-moi : Cabinet de Bien-Être-Sandrine-Picod{% endblock %}

{% block content %}
    <h1 class="d-flex justify-content-center">Contact et rendez-vous</h1>

    {% for contactMe in contactMes %}
    
        <section class="header">
            <h4 class="d-flex justify-content-center text-center my-5 font-weight-light">{{ contactMe.content|raw }} </h4>

            <div class="d-flex justify-content-center">
                <div class="card contact-card">
                    <div class="card-body d-flex flex-column align-items-center">
                    <h3 class="card-text d-flex justify-content-center ">Téléphone : {{ contactMe.phone }}</h5>
                    <h3 class="card-text d-flex justify-content-center ">Mail : {{ contactMe.mail }}</h5>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="top-content row">

            <div class="col-3">
                {% for about in abouts %}
                <img class="bd-placeholder-img rounded-circle" 
                src="{{ asset('/uploads/images/' ~ about.illustration) }}" 
                width="300" height="300"
                focusable="false" role="img" 
                alt="{{ about.illustration }}">
                {% endfor %}
            </div>

            <div class="col-6">
                <h3 class="d-flex justify-content-center my-5 mb-3">Vous avez une question ?</h3>
                <p>VOTRE NOM
                    <a href="#" class="btn h-50 w-100 btn-light btn-ext text-left">votre nom</a>
                </p>

                <p>VOTRE E-MAIL
                    <a href="#" class="btn h-50 w-100 btn-light btn-ext text-left">votre email</a>
                </p>
                
            </div>


            <div class="col-3">
                {% for about in abouts %}
                <img class="bd-placeholder-img rounded-circle" 
                src="{{ asset('/uploads/images/' ~ about.illustration) }}" 
                width="300" height="300"
                focusable="false" role="img" 
                alt="{{ about.illustration }}">
                {% endfor %}
            </div>

        </section>

        <section class="bottom-content row">

            <div class="col-9" height="300">
                <p>VOTRE MESSAGE
                    <a href="#" class="btn h-100 w-100 btn-light btn-ext text-left">blablablabla</a>
                </p>
            </div>

            <div class="col-3">
               
                {% if contactMe.address2 is defined %}

                    <p class="mt-4 ">
                        <a class="btn btn-rdv btn-dark bg-primary text-light" href="#" role="button">PRENEZ RENDEZ-VOUS &raquo;</a>
                    </p>
                    
                    <img class="bd-placeholder-img rounded-circle" 
                    src="{{ asset('/uploads/images/' ~ contactMe.map) }}" 
                    width="300" height="300"
                    focusable="false" role="img" 
                    alt="{{ contactMe.address1 }}">

                    <h3>{{ contactMe.address1 }}</h3>

                {% else %}

                    <h3>{{ contactMe.address1 }}</h3>
                    <h3>OU</h3>
                    <h3>{{ contactMe.address2 }}</h3>

                    <p class="mt-4 ">
                        <a class="btn btn-rdv btn-dark bg-primary text-light" href="#" role="button">PRENEZ RENDEZ-VOUS &raquo;</a>
                    </p>

                {% endif %}
                
            </div>

        </section>

        <div class="col-2">
            <a href="#" class="btn h-50 w-100 btn-light btn-ext text-left">ENVOYER</a>
        </div>

        
        
    {% endfor %}

{% endblock %}
