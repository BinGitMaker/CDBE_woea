{% extends 'base.html.twig' %}

{% block title %}Contactez-moi : Cabinet de Bien-Être-Sandrine-Picod{% endblock %}

{% block content %}
    <h1 class="d-flex justify-content-center">Contact et rendez-vous</h1>

    {% for contactMe in contactMes %}
    <!-- ENTETE tel phone -->
        <section class="header">
            <p class="h4 d-flex justify-content-center text-center my-4 font-weight-light">{{ contactMe.content|raw }} </p>

            <div class="d-flex justify-content-center">
                <div class="card contact-card">
                    <div class="card-body d-flex flex-column align-items-center">
                        <p class="h4 card-text d-flex justify-content-center  my-auto">Téléphone : {{ contactMe.phone }}</p>
                        <p class="h4 card-text d-flex justify-content-center  my-auto">Mail : {{ contactMe.mail }}</p>
                    </div>
                </div>
            </div>
        </section>
    <!-- /. ENTETE tel phone -->

        <section class="top-content row">
            <!-- LEFT COL with picture -->
            <div class="col order-1 d-flex flex-column col-lg-3 align-items-center">
                {% for about in abouts %}
                    <img class="bd-placeholder-img rounded-circle my-4" 
                    src="{{ asset('/uploads/images/' ~ about.illustration) }}" 
                    width="260" height="260"
                    focusable="false" role="img" 
                    alt="{{ about.illustration }}">
                {% endfor %}

                <div class="my-4 d-flex justify-content-center">
                    <a class="btn btn-rdv px-3" href="#" role="button">PRENEZ RENDEZ-VOUS</a>
                </div>
                
            </div>
            <!-- /. LEFT COL with picture -->

            <!-- MIDDLE COL with FORM -->
            <div class="col order-2 col-lg-6 px-5">
                
                <h3 class="d-flex justify-content-center my-4 mb-3">Prenez contact avec Sandrine :</h3>
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-info">{{ message }}</div>
                    {% endfor %}

                {{ form_start(form) }}

                <div class="d-flex flex-column justify-content-end">

                    {{ form_row(form.firstname) }}
                    {{ form_errors(form.firstname) }}

                    {{ form_row(form.lastname) }}
                    {{ form_errors(form.lastname) }}

                    {{ form_row(form.mail) }}
                    {{ form_errors(form.mail) }}

                    {{ form_row(form.message) }}
                    {{ form_errors(form.message) }}

                    {{ form_row(form.captcha) }}
                    {{ form_errors(form.captcha) }}

                </div>
                <br>
                {{ form_row(form.submit) }}

                {{ form_end(form) }}
                
                
            </div>
            <!-- /. MIDDLE COL with FORM -->
            
            <!-- RIGHT COL with MAP -->
            <div class="col col-lg-3 order-3 d-flex flex-column align-items-center">
                {% if contactMe.address2 is empty %}

                    {% for logo in logos %}
                        <img class="bd-placeholder-img bd-placeholder-img-lg img-fluid " 
                        src="{{ asset('/uploads/images/' ~ logo.logoPro) }}"
                        width="300" height="300" 
                        alt="{{ logo.logoPro }}">
                    {% endfor %}

                    <img class="bd-placeholder-img rounded my-0 mb-2" 
                    src="{{ asset('/uploads/images/' ~ contactMe.map) }}" 
                    width="250" height="250"
                    focusable="false" role="img" 
                    alt="{{ contactMe.address1|raw }}">

                    <h4 class="text-center">{{ contactMe.address1|raw }}</h4>

                {% else %}
                    <img class="bd-placeholder-img rounded my-0 mb-2" 
                    src="{{ asset('/uploads/images/' ~ contactMe.map) }}" 
                    width="250" height="250"
                    focusable="false" role="img" 
                    alt="{{ contactMe.address1|raw }}">

                    <h3 class="text-center">{{ contactMe.address1|raw }}</h3>
                    <br>
                    <h3 class="text-center py-3">OU</h3>
                    <br>
                    <img class="bd-placeholder-img rounded my-0 mb-2" 
                    src="{{ asset('/uploads/images/' ~ contactMe.map) }}" 
                    width="250" height="250"
                    focusable="false" role="img" 
                    alt="{{ contactMe.address1|raw }}">
                    <h3 class="text-center py-3 ">{{ contactMe.address2|raw }}</h3>
                {% endif %}
                
            </div>
            <!-- /. RIGHT COL with MAP -->
        </section>

        <section class="bottom-content row">

            <div class="col-3 d-flex flex-column align-items-center">
                
            </div>

        </section>
        
        
    {% endfor %}

{% endblock %}
